{
  "manifest_version": 3,
  "name": "Paster",
  "version": "1.0",
  "description": "Web sayfalarından seçili cümleleri KA veya KE kutucuklarına gönderme eklentisi.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}
